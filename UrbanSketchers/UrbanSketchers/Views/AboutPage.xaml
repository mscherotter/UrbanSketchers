<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UrbanSketchers.Views.AboutPage"
             Title="About Urban Sketches">
    <ContentPage.Content>
        <StackLayout Margin="8">
            <Label Text="Created by Michael S. Scherotter"/>
            <Label Text="Urban Sketches is an app for people to contribute and explore a growing map of sketches from around the world."/>
            <ListView ItemSelected="OnItemSelected" ItemsSource="{Binding Links}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                        <TextCell Text="{Binding Title}" Detail="{Binding Details}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Margin="4" x:Name="DeleteUserButton" Text="Remove user, sketches, and ratings." Clicked="OnRemoveUser" HorizontalOptions="Start"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>