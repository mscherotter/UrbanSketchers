             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UrbanSketchers.Views.MenuPage"
             Title ="Urban Sketches">
    <ContentPage.Resources>
        <!--<DataTemplate x:Key="ItemTemplate">
