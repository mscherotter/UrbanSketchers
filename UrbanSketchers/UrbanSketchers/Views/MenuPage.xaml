<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UrbanSketchers.Views.MenuPage"
             Title ="Urban Sketchers">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Items}" ItemSelected="OnItemSelected" RowHeight="48" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell IsEnabled="{Binding IsEnabled}">
                        <Grid Padding="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Icon}" VerticalOptions="FillAndExpand"/>
                            <StackLayout Grid.Column="1" Padding="4,0,0,0" VerticalOptions="Center">
                                <Label Text="{Binding Label}"/>
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>